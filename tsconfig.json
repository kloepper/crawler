{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es2018",
      "ESNext",
      "webworker",
    ],
    "module": "es6",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "outDir": "build/compiled",
    "allowJs": true
  },
  "include": [
    "lib/crawl.ts",
    "workers/crawl_worker.ts"
  ]
}